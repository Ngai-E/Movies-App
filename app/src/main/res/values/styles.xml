<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="image_background">
        <item name="android:background">@color/image_background</item>
    </style>
    <style name="progress_bar">
        <item name="android:layout_width">@dimen/width_height_progress_bar</item>
        <item name="android:layout_height">@dimen/width_height_progress_bar</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="wrap_wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="match_match_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="match_wrap_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="error_text_view">
        <item name="android:padding">@dimen/padding_16</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="text_info">
        <item name="android:layout_margin">@dimen/text_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
